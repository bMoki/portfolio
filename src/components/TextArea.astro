---
import type { HTMLProps } from "react";

export interface Props extends HTMLProps<typeof HTMLTextAreaElement> {}

const { placeholder } = Astro.props;
---

<textarea
    placeholder={placeholder}
    class="resize-none w-ful h-40 px-3 py-1 bg-gray-800 text-base text-gray-200 rounded placeholder:text-gray-300"
>
</textarea>
