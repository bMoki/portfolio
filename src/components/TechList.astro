---
import type { Tech } from "../pages/index.astro";
import PolygonBox from "./PolygonBox.astro";

export interface Props {
    border: "purple" | "red" | "silver";
    size: "xs" | "sm" | "md";
    techList: Array<string>;
}
const techs: Tech[] = [
    {
        imgUrl: "images/techs/Next.svg",
        name: "NextJS",
        description: "Description Next js",
    },
    {
        imgUrl: "images/techs/React.svg",
        name: "React",
        description: "Description React js",
    },
    {
        imgUrl: "images/techs/Tailwind.svg",
        name: "Tailwind",
        description: "Description Tailwindcss",
    },
];
const { techList, border, size } = Astro.props;
---

{
    techs.map((tech) => {
        if (techList.find((techUsed) => tech.name === techUsed))
            return (
                <PolygonBox size={size} border={border}>
                    <img
                        src={tech.imgUrl}
                        alt={tech.name}
                        class="w-3/5 mix-blend-luminosity"
                    />
                </PolygonBox>
            );
    })
}
